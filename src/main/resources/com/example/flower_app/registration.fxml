<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="400.0" style="-fx-background-color: #f159ff;"
            xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.flower_app.Registration">
    <children>
        <Label layoutX="90.0" layoutY="14.0" text="Регистрация Клиента">
            <font>
                <Font name="Calibri Bold" size="24.0"/>
            </font>
        </Label>
        <TextField fx:id="clientId" layoutX="125.0" layoutY="57.0" promptText="ID"
                   style="-fx-background-color: #fff; -fx-border-color: #000; -fx-border-radius: 10px;"/>
        <TextField fx:id="clientFio" layoutX="125.0" layoutY="92.0" promptText="ФИО"
                   style="-fx-background-color: #fff; -fx-border-color: #000; -fx-border-radius: 10px;"/>
        <TextField fx:id="clientAddress" layoutX="126.0" layoutY="130.0" promptText="Адрес"
                   style="-fx-background-color: #fff; -fx-border-color: #000; -fx-border-radius: 10px;"/>
        <TextField fx:id="clientBirth" layoutX="125.0" layoutY="173.0" promptText="Дата рождения"
                   style="-fx-background-color: #fff; -fx-border-color: #000; -fx-border-radius: 10px;"/>
        <TextField fx:id="clientLogin" layoutX="125.0" layoutY="211.0" promptText="Логин"
                   style="-fx-background-color: #fff; -fx-border-color: #000; -fx-border-radius: 10px;"/>
        <TextField fx:id="clientPassword" layoutX="126.0" layoutY="248.0" promptText="Пароль"
                   style="-fx-background-color: #fff; -fx-border-color: #000; -fx-border-radius: 10px;"/>
        <Button fx:id="registerBtn" layoutX="101.0" layoutY="321.0" mnemonicParsing="false"
                onAction="#clientRegistration" prefHeight="25.0" prefWidth="149.0"
                style="-fx-min-width: 200px; -fx-background-color: #202020; -fx-border-color: #000; -fx-border-radius: 10px;"
                text="Зарегистрировать" textFill="WHITE">
            <font>
                <Font name="Calibri" size="18.0"/>
            </font>
        </Button>
        <Label fx:id="regLabel" contentDisplay="CENTER" layoutX="101.0" layoutY="289.0" prefHeight="20.0"
               prefWidth="200.0" textFill="RED">
            <font>
                <Font size="14.0"/>
            </font>
        </Label>
    </children>
</AnchorPane>
