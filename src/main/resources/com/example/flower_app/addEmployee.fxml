<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="400.0" style="-fx-background-color: #f159ff;"
            xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.flower_app.AddEmployee">
    <children>
        <Label layoutX="90.0" layoutY="14.0" prefHeight="25.0" prefWidth="246.0" text="Добавление работника">
            <font>
                <Font name="Calibri Bold" size="24.0"/>
            </font>
        </Label>
        <TextField fx:id="EmployeeId" layoutX="125.0" layoutY="57.0" promptText="ID"
                   style="-fx-background-color: #fff; -fx-border-color: #000; -fx-border-radius: 10px;"/>
        <TextField fx:id="EmployeeFio" layoutX="125.0" layoutY="92.0" promptText="ФИО"
                   style="-fx-background-color: #fff; -fx-border-color: #000; -fx-border-radius: 10px;"/>
        <TextField fx:id="EmployeePost" layoutX="125.0" layoutY="133.0" prefHeight="20.0" prefWidth="151.0"
                   promptText="Должность"
                   style="-fx-background-color: #fff; -fx-border-color: #000; -fx-border-radius: 10px;"/>
        <TextField fx:id="EmployeeAddress" layoutX="125.0" layoutY="168.0" prefHeight="27.0" prefWidth="151.0"
                   promptText="Адрес"
                   style="-fx-background-color: #fff; -fx-border-color: #000; -fx-border-radius: 10px;"/>
        <TextField fx:id="EmployeeBirth" layoutX="125.0" layoutY="207.0" prefHeight="28.0" prefWidth="151.0"
                   promptText="Дата рождения"
                   style="-fx-background-color: #fff; -fx-border-color: #000; -fx-border-radius: 10px;"/>
        <TextField fx:id="EmployeeLogin" layoutX="125.0" layoutY="244.0" prefHeight="28.0" prefWidth="151.0"
                   promptText="Логин"
                   style="-fx-background-color: #fff; -fx-border-color: #000; -fx-border-radius: 10px;"/>
        <TextField fx:id="EmployeePassword" layoutX="126.0" layoutY="281.0" prefHeight="27.0" prefWidth="151.0"
                   promptText="Пароль"
                   style="-fx-background-color: #fff; -fx-border-color: #000; -fx-border-radius: 10px;"/>
        <Button fx:id="addEmployeeBtn" layoutX="101.0" layoutY="321.0" mnemonicParsing="false" onAction="#addEmployee"
                prefHeight="25.0" prefWidth="149.0"
                style="-fx-min-width: 200px; -fx-background-color: #202020; -fx-border-color: #000; -fx-border-radius: 10px;"
                text="Добавить" textFill="WHITE">
            <font>
                <Font name="Calibri" size="18.0"/>
            </font>
        </Button>
        <Label fx:id="employeeLabel" contentDisplay="CENTER" layoutX="101.0" layoutY="366.0" prefHeight="27.0"
               prefWidth="200.0" textFill="RED">
            <font>
                <Font size="14.0"/>
            </font>
        </Label>
    </children>
</AnchorPane>
