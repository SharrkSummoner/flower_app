<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="400.0" style="-fx-background-color: #f159ff;"
            xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.flower_app.enterOrder">
    <children>
        <Label layoutX="125.0" layoutY="14.0" text="Принять заказ">
            <font>
                <Font name="Calibri Bold" size="24.0"/>
            </font>
        </Label>
        <ComboBox fx:id="orderSelect" layoutX="100.0" layoutY="71.0" prefHeight="36.0" prefWidth="200.0"
                  promptText="Выбрать заказ"
                  style="-fx-background-color: #fff; -fx-border-color: #000; -fx-border-radius: 10px; -fx-min-width: 200px;"/>
        <TextField fx:id="orderTime" layoutX="100.0" layoutY="144.0" prefHeight="36.0" prefWidth="200.0"
                   promptText="Время поездки"/>
        <Label fx:id="orderLabel" contentDisplay="CENTER" layoutX="100.0" layoutY="200.0" prefHeight="17.0"
               prefWidth="200.0">
            <font>
                <Font name="Calibri" size="14.0"/>
            </font>
        </Label>
        <Button fx:id="confirmBtn" layoutX="100.0" layoutY="239.0" mnemonicParsing="false" onAction="#confirmOrder"
                prefHeight="25.0" prefWidth="149.0"
                style="-fx-min-width: 200px; -fx-background-color: #202020; -fx-border-color: #000; -fx-border-radius: 10px;"
                text="Завершить" textFill="WHITE">
            <font>
                <Font name="Calibri" size="18.0"/>
            </font>
        </Button>
        <Button fx:id="cancelBtn" layoutX="100.0" layoutY="325.0" mnemonicParsing="false" onAction="#cancelOrder"
                prefHeight="25.0" prefWidth="149.0"
                style="-fx-min-width: 200px; -fx-background-color: #202020; -fx-border-color: #000; -fx-border-radius: 10px;"
                text="Отменить" textFill="WHITE">
            <font>
                <Font name="Calibri" size="18.0"/>
            </font>
        </Button>
    </children>
</AnchorPane>
